@model IEnumerable<Stores.ViewModels.StoreViewModel>

@{
    ViewData["Title"] = "Store Index";
}

<h2>Store Index</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StoreNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StoreName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StoreManagerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OpeningTime)
            </th> 
            <th>
                @Html.DisplayNameFor(model => model.ClosingTime)
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var store in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => store.StoreNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => store.StoreName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => store.StoreManagerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => store.OpeningTime)
            </td>
            <td>    
                @Html.DisplayFor(modelItem => store.ClosingTime)
            </td>
            <td>
                @Html.RouteLink("View Details", "Detail", new { storeNumber = @store.StoreNumber })
            </td>
        </tr>
    }
    </tbody>
</table>